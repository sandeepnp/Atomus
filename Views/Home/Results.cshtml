@model AtomusFileUpload.ViewModels.EmployeesViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@Model.PageName</title>
    <!--link id="LinkStylesheet" rel="stylesheet" href="/static/build/css/site.css" media="screen" /-->
</head>
<body>

    <div>
        <h1>
            @Model.PageName
        </h1>
    </div>

    @if (Model.Employees == null)
    {
        <div>
            @Html.LabelFor(model => model.NoResults)
        </div>
    }
    else
    {
        if (Model.Employees.Any())
        {
            <div>
                <table>
                    <tbody>
                        <tr>
                            <th>First Name</th>
                            <th>Last Name</th>
                            <th>Company</th>
                            <th>Address</th>
                            <th>City</th>
                            <th>County</th>
                            <th>PostCode</th>
                            <th>Phone 1</th>
                            <th>Phone 2</th>
                            <th>Email</th>
                            <th>Website</th>
                        </tr>
                        @foreach (var employee in Model.Employees)
                    {
                            <tr>
                                <td>@employee.FirstName</td>
                                <td>@employee.LastName</td>
                                <td>@employee.Company</td>
                                <td>@employee.Address</td>
                                <td>@employee.City</td>
                                <td>@employee.County</td>
                                <td>@employee.PostCode</td>
                                <td>@employee.Phone1</td>
                                <td>@employee.Phone2</td>
                                <td>@employee.Email</td>
                                <td>@employee.Web</td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
    }

</body>
</html>